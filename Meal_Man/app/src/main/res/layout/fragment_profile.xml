<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.ProfileFragment">

    <LinearLayout
        android:id="@+id/profileLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profileedittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profileName"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/akaya_telivigala"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:text="Name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profileNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#00000000"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Name"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/profileLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileLayout1"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profileedittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profileAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/akaya_telivigala"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:paddingEnd="10dp"
            android:text="Address"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profileAddressEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="@color/black"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Lorem ipsum is placeholder text commonly used in the graphic, print, and publishing industries for previewing layouts and visual mockups."
            android:inputType="textMultiLine"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileLayout2"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profileedittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/akaya_telivigala"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:text="Email"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profileEmailEditText"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="201b239@juetguna.in"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/profileLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profileedittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prfilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/akaya_telivigala"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:text="Phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profilePhoneEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="7014775343"
            android:inputType="phone"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingEnd="20dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profileSubmitButton"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Information"
        android:paddingTop="5dp"
        android:textAllCaps="false"
        android:elevation="5dp"
        android:textSize="20sp"
        android:textColor="#FFB534"
        android:background="@drawable/proceedbuttonshape"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/akaya_telivigala"
        />



</RelativeLayout>