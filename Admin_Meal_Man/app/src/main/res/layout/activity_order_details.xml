<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity">
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:background="#00000000"
        android:src="@drawable/arrowleft" />

    <TextView
        android:id="@+id/payOutHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/satisfy"
        android:textColor="@color/black"
        android:text="Order Details"
        android:textSize="50sp" />

    <LinearLayout
        android:id="@+id/payOutLayout1"
        android:layout_width="match_parent"
        android:layout_below="@id/payOutHeading"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:weightSum="2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profileedittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payOutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:fontFamily="@font/akayatelivigalaregular"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/payOutNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:ems="10"
            android:fontFamily="@font/akayatelivigalaregular"
            android:hint="Name"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:textColor="#000000" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/payOutLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payOutLayout1"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="1dp"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profileedittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payOutAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:fontFamily="@font/akayatelivigalaregular"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="Address"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/payOutAddressEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:ems="10"
            android:fontFamily="@font/akayatelivigalaregular"
            android:hint="Lorem ipsum is placeholder text commonly used in the graphic, print, and publishing industries for previewing layouts and visual mockups."
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payOutLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payOutLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profileedittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payOutPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:fontFamily="@font/akayatelivigalaregular"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="Phone"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/payOutPhoneEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:ems="10"
            android:fontFamily="@font/akayatelivigalaregular"
            android:hint="7014775343"
            android:inputType="phone"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payOutLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payOutLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profileedittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payOutAmount"
            android:layout_width="249dp"
            android:layout_height="52dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/akayatelivigalaregular"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="Total Amount"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/payOutAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/akayatelivigalaregular"
            android:text="250"
            android:textColor="#FFB534"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            app:drawableStartCompat="@drawable/rupees" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderDetailsRecyclerView"
        android:layout_width="match_parent"
        android:layout_below="@id/payOutLayout5"
        android:layout_height="match_parent"
        tools:listitem="@layout/orderdetail_items"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>

</RelativeLayout>